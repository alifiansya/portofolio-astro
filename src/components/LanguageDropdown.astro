---
const {class: className = "", current="", items = []} = Astro.props
---

<div class="language-container relative inline-block text-left">
    <!-- Button -->
    <button class={"language-button inline-flex w-full justify-center gap-x-1.5 rounded-md bg-gray-700 px-2 py-2 text-sm font-semibold text-white hover:bg-gray-600 " + className}>
        <svg class="-mr-0.5 size-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" >
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
        </svg>
        {current}
        <svg class="-mr-1 size-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M5.22 8.22a.75.75 0 011.06 0L10 11.94l3.72-3.72a.75.75 0 111.06 1.06l-4.25 4.25a.75.75 0 01-1.06 0L5.22 9.28a.75.75 0 010-1.06z" />
        </svg>
    </button>
  
    <!-- Dropdown -->
    <div class="language-menu absolute hidden right-0 mt-2 w-32 origin-top-right rounded-md bg-white shadow-md border-1 border-gray-100">
        <div class="py-1">
            {items.map((lang: any) => <a href=`${lang[1]}` class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{lang[0]}</a>)}
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.language-container').forEach((root) => {
        const button = root.querySelector(".language-button");
        const menu = root.querySelector(".language-menu");
    
        button?.addEventListener("click", () => {
            menu?.classList.toggle("hidden");
        });

        // Hid menu if click anywhere else
        document.addEventListener("click", (e) => {
            if (!root.contains(e.target as Node)) {
                menu?.classList.add("hidden");
            }
        });
    });
</script>